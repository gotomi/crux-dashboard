const {title} = Astro.props;

---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="stylesheet" href="/style/global.css">
</head>
  <body>
     <nav>
     <ul>
        <li><span>Distribution</span></li>
        <li><a href="/distribution/ecommerce-pl-origin">origin (PL)</a></li>
        <li><a href="/distribution/ecommerce-pl-url">home (PL)</a></li>
        <li><a href="/distribution/ecommerce-eu-origin">origin (EU)</a></li>
        <li><a href="/distribution/ecommerce-eu-url">home (EU)</a></li>
        <li><span>P75</span></li>
