---
export interface Props {
  url: any;
}
const { url } = Astro.props;
const icon = "https://www.google.com/s2/favicons?sz=16&domain_url=" + url.replace('https://','');

function displayTitle(title, titleArr) {
    return titleArr.includes(title) ? `<strong>${title}</strong>` : title;
}


---
<img src={icon} class="icon" width="12" height="12"/> {displayTitle(url,["allegro.pl, allegrolokalnie.pl"])}

<style>

.icon{
    max-width: 12px;
    margin: 0 3px 0 0;
}

</style>
